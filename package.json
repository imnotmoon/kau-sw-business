{
  "devDependencies": {
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "2.3.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint . --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "front": "cd frontend/kau-sw-business && npm run dev",
    "server": "cd backend/src && npm run dev",
    "dev": "concurrently --kill-others-on-fail \"npm run front\" \"npm run server\""
  },
  "dependencies": {
    "babel-eslint": "^10.1.0",
    "concurrently": "^6.2.0"
  }
}
